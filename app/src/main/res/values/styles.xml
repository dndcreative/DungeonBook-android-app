<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">60%</item>
    </style>

    <style name="BottomNavigationTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/jolly_lodger</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.Toolbar.Popup.Primary." parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="txtSubtitleToolbar">
        <item name="android:textSize">14sp</item>
        <item name="titleTextColor">@color/theme_toolbar_subtitle_text_color</item>
    </style>

    <style name="txtToolbar">
        <item name="fontFamily">@font/jolly_lodger</item>
        <item name="android:textSize">32sp</item>
        <item name="titleTextColor">@color/theme_toolbar_text_color</item>
    </style>

    <style name="txtAppCompatButton">
        <item name="fontFamily">@font/jolly_lodger</item>
        <item name="android:textSize">26sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/btn_text_selector</item>
    </style>

</resources>