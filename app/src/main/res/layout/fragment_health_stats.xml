<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:minHeight="80dp"
    android:background="@android:color/transparent">

    <ImageButton
        android:id="@+id/btnExpand"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_bat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btnMinus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/moon_m"
        app:layout_constraintBottom_toBottomOf="@id/ivMoon"
        app:layout_constraintEnd_toStartOf="@id/ivMoon"
        app:layout_constraintTop_toTopOf="@id/ivMoon" />

    <ImageView
        android:id="@+id/ivMoon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/moon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCurrentHealthPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jolly_lodger"
        android:text="@string/default_available_points_qty"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@id/ivMoon"
        app:layout_constraintEnd_toEndOf="@id/ivMoon"
        app:layout_constraintStart_toStartOf="@id/ivMoon"
        app:layout_constraintTop_toTopOf="@id/ivMoon" />

    <ImageButton
        android:id="@+id/btnPlus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/moon_p"
        app:layout_constraintBottom_toBottomOf="@id/ivMoon"
        app:layout_constraintStart_toEndOf="@id/ivMoon"
        app:layout_constraintTop_toTopOf="@id/ivMoon" />

</androidx.constraintlayout.widget.ConstraintLayout>